{
  "name": "mittwald/wordpress-ai-provider",
  "description": "Adds mittwald AI hosting to the available AI providers",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "homepage": "https://github.com/mittwald/wordpress-ai-provider",
  "autoload": {
    "psr-4": {
      "Mittwald\\AiProvider\\": "includes/"
    }
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "wordpress/wp-ai-client": "~0.2.1",
    "phpstan/phpstan": "^2.1.37",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "phpstan/extension-installer": "^1.4",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  },
  "scripts": {
    "analyse": "phpstan analyse --memory-limit=512M",
    "format": "phpcs",
    "format:fix": "phpcbf",
    "package": [
      "rm -f mittwald-ai-provider.zip",
      "composer install --no-dev --optimize-autoloader",
      "zip -r mittwald-ai-provider.zip . -x '*.git*' -x '*.md' -x '.idea/*' -x '.claude/*' -x phpcs.xml -x phpstan.neon"
    ]
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
